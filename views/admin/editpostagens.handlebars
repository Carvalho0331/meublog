
<section class="grid-section">

  <form class="form" action="/admin/postagens/edit" method="post">
    <input type="hidden" name="id" value="{{postagem._id}}" />
    <h1>Editar Postagem</h1>
    <label for="titulo">titulo</label>
    <input type="text" name="titulo" value="{{postagem.titulo}}"/>
    <label for="slug">slug</label>
    <input type="text" name="slug" value="{{postagem.slug}}"/>
    <label for="descricao">descricao</label>
    <input type="text" name="descricao" value="{{postagem.descricao}}" />
    <label for="conteudo">conteudo</label>
    <textarea name="conteudo">{{postagem.conteudo}}</textarea>
    <label for="categoria">Categorias</label>
    <select name="categoria">
      {{#each categoria}}
        <option value="{{_id}}">{{nome}}</option>
      {{else}}
        <option value="">Nenhuma categoria registadas</option>
      {{/each}}
    </select>
    <button>Editar Postagem</button>
  </form>
</section>